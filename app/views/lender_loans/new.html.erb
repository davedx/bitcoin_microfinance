<div class="header">
	<h1>Fund loan</h1>
	<h2>Help to fund <%= @owner.name %>'s loan.</h2>
</div>

<div class="content">
	<h2><%= @loan.title %></h2>
	<p><%= @loan.proposal %></p>
	<%= form_for [@loan, @lender_loan],
	html: { class: "pure-form pure-form-aligned" } do |f| %>
		<fieldset>

			<div class="pure-control-group">
				<%= f.label :amount, "Fund this loan by" %>
				<%= f.text_field :amount %> BTC
			</div>

			<div class="pure-control-group">
				<%= f.label :interest %>
				<%= f.text_field :interest %> % APR
			</div>

			<div class="pure-controls">
				<%= f.submit "Fund loan",
					:class => "pure-button pure-button-primary" %>
			</div>
		</fieldset>
	<% end %>
</div>
