<div class="content">
	<%= form_for(@loan,
	html: { class: "pure-form pure-form-aligned" }) do |f| %>
		<fieldset>

			<div class="pure-control-group">
				<%= f.label :amount %>
				<%= f.number_field :amount, :readonly => edit %> BTC
			</div>

			<div class="pure-control-group">
				<%= f.label :title %>
				<%= f.text_field :title %>
			</div>

			<div class="pure-control-group">
				<%= f.label :proposal %>
				<%= f.text_area :proposal, size: "32x8" %>
			</div>

			<div class="pure-control-group">
				<%= f.label :repayment %>
				<%= f.text_area :repayment, size: "32x5" %>
			</div>

			<div class="pure-controls">
				<%= f.submit ( f.object.new_record? ? "Create loan" : "Update loan"),
					:class => "pure-button pure-button-primary" %>
			</div>
		</fieldset>
	<% end %>
</div>
