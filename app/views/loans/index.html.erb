<div class="header">
	<h1>Browse loans</h1>
	<h2>All loans available to be funded</h2>
</div>

<div class="content">
	<p>All loans that have not yet been funded are listed here.</p>

	<% @loans.each do |loan| %>
		<div class="pure-g">
			<div class="pure-u-1-3"><%= link_to loan.title, loan_path(loan) %></div>
			<div class="pure-u-1-3"><%= loan.amount %> BTC</div>
		</div>
	<% end %>
</div>
