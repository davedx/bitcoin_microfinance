<div class="header">
	<h1>My loans</h1>
	<h2>All loans belonging to me</h2>
</div>

<div class="content">
	<p>You can edit the information for your existing loans by clicking on "Edit".</p>

	<% @loans.each do |loan| %>
		<div class="pure-g">
			<div class="pure-u-1-3"><%= link_to loan.title, loan_path(loan) %></div>
			<div class="pure-u-1-3"><%= loan.amount %> BTC</div>
			<div class="pure-u-1-3">
				<%= link_to "Edit", edit_loan_path(loan), :class => "pure-button pure-button-primary" %>
			</div>
		</div>
	<% end %>
</div>
